<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginEnd="@dimen/mtr_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_special_offer"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_4x" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_special_offer_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/iv_special_offer"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textAlignment="center"
            tools:text="askdjalsdkjklasjffffffffffffffff" />

        <View
            android:id="@+id/view_space_special_offer"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/tv_special_offer_title"
            android:layout_marginBottom="4dp"
            android:background="@color/gray_300" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_offer_previous_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_space_special_offer"
            android:layout_marginStart="@dimen/mtr_margin"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold|italic"
            tools:text="100$" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_offer_current_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_offer_previous_price"
            android:layout_marginStart="@dimen/mtr_margin"
            android:layout_marginBottom="4dp"
            android:textColor="@color/main_cat_unselected_bg_color"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="50$" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>