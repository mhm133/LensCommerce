<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:background="@color/colorPrimary"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_nav_header_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_user_black_24dp"
        android:layout_marginBottom="@dimen/margin_4x"
        app:tint="@android:color/white"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Peter Slip"
        android:layout_toEndOf="@+id/iv_nav_header_user"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_4x"
        android:textColor="@color/primaryTextColor"
        app:fontFamily="@font/arial"/>

</RelativeLayout>