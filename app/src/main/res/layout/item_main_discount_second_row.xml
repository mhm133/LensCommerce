<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_discount_second_row_1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_margin="@dimen/mtr_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_discount_main_second_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/gray_300" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_discount_second_row_2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/mtr_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_discount_main_second_row_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/gray_300" />

    </androidx.cardview.widget.CardView>
</LinearLayout>