<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_products_cat"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        tools:background="@color/bluegrey_dark"
        android:layout_margin="@dimen/mtr_margin"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_products_cat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mobile"
        android:layout_toStartOf="@+id/iv_products_cat"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/mtr_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_500"
        android:layout_below="@+id/iv_products_cat" />
</RelativeLayout>