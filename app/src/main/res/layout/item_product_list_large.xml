<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/product_items_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_product"
            android:layout_width="@dimen/product_list_product_image_size_large_item"
            android:layout_height="@dimen/product_list_product_image_size_large_item"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_4x"
            android:layout_marginBottom="@dimen/product_list_standard_margin"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/arial"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/adrs_title1"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="@color/dividersColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/product_list_standard_margin"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/product_list_standard_margin"
            android:paddingBottom="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_previous_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#f5363f"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_previous_price"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/product_list_standard_margin"
                android:fontFamily="@font/arial"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
